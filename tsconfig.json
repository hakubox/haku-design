{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@answer/*": [
        "./src/packages/answer/*",
      ]
    },
  },
  "include": [
    "docs/.vuepress/**/*.ts",
    "docs/.vuepress/**/*.vue",
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
