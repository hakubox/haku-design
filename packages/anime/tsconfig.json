{
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "howler",
    ],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/@types"
    ],
    "paths": {
      "@/*": [
        "./src/*",
      ]
    },
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
